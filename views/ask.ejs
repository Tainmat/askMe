<%- include ('partials/header.ejs')%>
<body>
  <%- include ('partials/navbar.ejs')%>
  <div class="container" id="askForm">
    <div class="card">
      <div class="card-header">
        <h3>Realizar pergunta</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/saveask">
          <label>Título</label>
          <input
            name="titulo"
            class="form-control"
            type="text"
            placeholder="Título"
          />
          <label>Descrição</label>
          <textarea
            name="descricao"
            class="form-control"
            placeholder="Descreva sua pergunta aqui"
          ></textarea>
          <button class="btn btn-primary">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>
<%- include ('partials/scripts.ejs')%>
