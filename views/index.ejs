<%- include ('partials/header.ejs')%>
<body>
  <%- include ('partials/navbar.ejs')%>
  <div class="container">
    <hr />
    <h1>Questions</h1>
    <a href="/ask" class="btn btn-primary">Ask me</a>
    <hr />

    <% questions.forEach(question => { %>

    <div class="card">
      <div class="card-body">
        <h4><%= question.NM_TITL %></h4>
      </div>
      <div class="card-footer">
        <a href="/asks/<%= question.id %>" class="btn btn-primary">Responder</a>
      </div>
    </div>

    <% }) %>
  </div>
</body>
<%- include ('partials/scripts.ejs')%>
